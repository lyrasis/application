<record id="hierarchy" in-recordlist="no">

	<structures>
		<structure id="screen">
			<view>
				<titlebar show="false" />

				<edit-section id="hierarchy" show="true" />
			</view>
		</structure>
	</structures>

	<include src="domain-other-hierarchy.xml" strip-root="yes" />

	<section id="hierarchyInformation">
		<field id="broaderContext" autocomplete="true" />
		<field id="broaderContextType" />
		<repeat id="narrowerContexts">
			<field id="narrowerContext" autocomplete="true" />
			<field id="narrowerContextType" />
		</repeat>
		<repeat id="relatedTerms">
			<field id="relatedTerm" autocomplete="true" />
		</repeat>
	</section>
	<section id="equivalentInformation">
		<repeat id="equivalentContexts">
			<field id="equivalentContext" ui-type="hierarchy" />
		</repeat>
	</section>
</record>
