<record id="locality" in-recordlist="no" separate-record="false" services-type="localityGroupList">
	<section id="localityInformation">
		<repeat id="localityGroupList/localityGroup">
			<field id="fieldLocVerbatim" />
			<field id="taxonomicRange" />
			<field id="fieldLocPlace" autocomplete="true" />
			<field id="fieldLocCounty" />
			<field id="fieldLocState" />
			<field id="fieldLocCountry" />
			<field id="fieldLocHigherGeography" />
			<field id="vCoordinates" />
			<field id="vOtherCoords" />
			<field id="vLatitude" />
			<field id="vLongitude" />
			<field id="vCoordSys" autocomplete="true" ui-type="enum" />
			<field id="vSpatialReferenceSystem" />

			<field id="decimalLatitude" datatype="float" />
			<field id="decimalLongitude" datatype="float" />
			<field id="geodeticDatum" />
			<field id="coordUncertainty" datatype="float" />
			<field id="coordUncertaintyUnit" />
			<field id="vDepth" />
			<field id="minDepth" datatype="float" />
			<field id="maxDepth" datatype="float" />
			<field id="depthUnit" />
			<field id="vElevation" />
			<field id="minElevation" datatype="float" />
			<field id="maxElevation" datatype="float" />
			<field id="elevationUnit" />
			<field id="vDistanceAboveSurface" />
			<field id="minDistanceAboveSurface" datatype="float" />
			<field id="maxDistanceAboveSurface" datatype="float" />
			<field id="distanceAboveSurfaceUnit" />
			<field id="localityNote" />
			<field id="localitySource" />
			<field id="localitySourceDetail" />

			<field id="pointRadiusSpatialFit" />
			<field id="footprintWKT" />
			<field id="footprintSRS" />
			<field id="footprintSpatialFit" />
			<field id="coordPrecision" />
			<field id="geoRefencedBy" />
			<group id="geoRefDateGroup" ui-type="groupfield/structureddate" />
			<!-- See http://code.google.com/p/darwincore/wiki/Location#georeferenceProtocol -->
			<field id="geoRefProtocol" />
			<field id="geoRefSource" />
			<!-- See http://code.google.com/p/darwincore/wiki/Location#georeferenceVerificationStatus -->
			<field id="geoRefVerificationStatus" />
			<field id="geoRefRemarks" />
			<field id="geoRefPlaceName" />

			<field id="collectionLocationVerbatim" />
			<field id="collectionPlace" autocomplete="true" />
		</repeat>
	</section>
</record>
