<record id="movement" is-extension="true">
	<services-record-path id="botgarden">movements_botgarden:http://collectionspace.org/services/movement/local/botgarden,movements_botgarden</services-record-path>

	<section id="locationMovementInformation">
		<!-- Change mini summary to number -->
		<field id="currentLocation" mini="number,list" />

		<!-- Local fields -->

		<field id="previousLocation" authref-in-services="true" section="botgarden" />
	</section>

	<section id="movementControlInformation">
		<!--  Remove mini -->
		<field id="movementReferenceNumber" mini="" />

		<!-- Add mini=summary and make dynamic -->
		<field id="reasonForMove" mini="summary" autocomplete="true" ui-type="enum" />
	</section>

	<!-- Local fields -->

	<section id="labelInformation">
		<field id="labelRequested" section="botgarden" />

		<field id="labelSize" autocomplete="true" ui-type="enum" section="botgarden" />
		<field id="labelStandType" autocomplete="true" ui-type="enum" section="botgarden" />
		<field id="labelCount" datatype="integer" section="botgarden" />
	</section>
</record>
