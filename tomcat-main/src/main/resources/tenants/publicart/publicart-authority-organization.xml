<record id="organization" is-extension="true">
    <services-record-path id="publicart">organizations_publicart:http://collectionspace.org/services/organization/local/publicart,organizations_publicart</services-record-path>

    <section id="organizationNameAuthorityInformation">
        <field id="foundingPlace" autocomplete="place-place" />
        <field id="currentPlace" autocomplete="place-place" section="publicart" />
    </section>
    
    <section id="organizationNameAuthorityInformation">
        <!-- Local fields-->

        <repeat id="socialMediaGroupList/socialMediaGroup" section="publicart">
            <field id="socialMediaHandle" section="publicart" />
            <field id="socialMediaHandleType" autocomplete="true" ui-type="enum"  section="publicart" />
        </repeat>
    </section>
</record>
