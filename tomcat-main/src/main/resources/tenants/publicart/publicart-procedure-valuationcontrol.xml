<record id="valuationcontrol" is-extension="true">
	<services-record-path id="publicart">valuationcontrols_publicart:http://collectionspace.org/services/valuationcontrol/local/publicart,valuationcontrols_publicart</services-record-path>

	<section id="objectValuationInformation">
		<!-- Local fields -->

		<field id="valueSourceRole" section="publicart" />
	</section>

	<section id="insuranceInformation">
		<!-- Local fields -->

		<repeat id="insuranceGroupList/insuranceGroup" section="publicart">
			<field id="insurer" autocomplete="true" section="publicart" />
			<field id="insuranceNote" section="publicart" />
			<field id="insurancePolicyNumber" section="publicart" />
			<field id="insuranceRenewalDate" datatype="date" section="publicart" />
		</repeat>
	</section>
</record>
