<record id="material" type="authority">
    <instances id="material">
        <instance id="material-material">
            <web-url>material</web-url>
            <title-ref>material</title-ref>
            <title>Local Materials</title>
            <nptAllowed>false</nptAllowed>
        </instance>
        <instance id="material-material_shared">
            <web-url>material_shared</web-url>
            <title-ref>material_shared</title-ref>
            <title>Shared Materials</title>
            <nptAllowed>false</nptAllowed>
        </instance>
    </instances>
    
    <section id="materialAuthorityInformation">
        <repeat id="materialCompositionGroupList/materialCompositionGroup">
            <field id="materialCompositionFamilyName" ui-search="repeatable" autocomplete="concept-materialclassification, concept-materialclassification_shared"/>
            <field id="materialCompositionClassName" ui-search="repeatable" autocomplete="concept-materialclassification, concept-materialclassification_shared"/>
            <field id="materialCompositionGenericName" ui-search="repeatable" autocomplete="concept-materialclassification, concept-materialclassification_shared"/>
        </repeat>
    </section>
    
</record>
