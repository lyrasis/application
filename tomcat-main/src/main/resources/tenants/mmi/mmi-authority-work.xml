<record id="work" type="authority" is-extension="true" generate-services-schema="true">
    <services-record-path id="mmi">
        works_mmi:http://collectionspace.org/services/work/local/mmi,works_mmi
    </services-record-path>
    <section id="workAuthorityInformation">
        <field id="mmiGenre" autocomplete="vocab-genre" ui-type="enum"
                section="mmi" />
        <field id="mmiMedium" ui-search="repeatable" autocomplete="vocab-medium" ui-type="enum"
               section="mmi" />
        <repeat id="migratedEntityGroupList/migratedEntityGroup"
                section="mmi">
            <field id="migratedEntity" autocomplete="person-person"
                   section="mmi" />
            <field id="migratedEntityType" autocomplete="vocab-migratedEntityType" ui-type="enum"
                   section="mmi" />
        </repeat>
    </section>
</record>